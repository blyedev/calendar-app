{
  "name": "calendar-app-frontend",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --host 0.0.0.0",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "jest --maxWorkers 2",
    "test:ci": "jest --coverage",
    "test:watch": "jest --watch",
    "prettier:check": "prettier --check \"**/*.{ts,html,css,json}\"",
    "prettier:fix": "prettier --write \"**/*.{ts,html,css,json}\"",
    "format": "npm run prettier:fix",
    "type-check": "tsc",
    "lint": "tsc && npm run lint:ng && npm run lint:css",
    "lint:fix": "npm run lint:ng:fix && npm run lint:css:fix",
    "lint:ng": "ng lint",
    "lint:ng:fix": "ng lint --fix",
    "lint:ng:ci": "ng lint --max-warnings=0",
    "lint:css": "stylelint \"**/*.css\"",
    "lint:css:fix": "stylelint \"**/*.css\" --fix",
    "lint:css:ci": "stylelint --custom-formatter @csstools/stylelint-formatter-github \"**/*.css\""
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.1.7",
    "@angular/common": "^19.1.7",
    "@angular/compiler": "^19.1.7",
    "@angular/core": "^19.1.7",
    "@angular/forms": "^19.1.7",
    "@angular/platform-browser": "^19.1.7",
    "@angular/platform-browser-dynamic": "^19.1.7",
    "@angular/router": "^19.1.7",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^19.1.8",
    "@angular/cli": "^19.1.8",
    "@angular/compiler-cli": "^19.1.7",
    "@csstools/stylelint-formatter-github": "^1.0.0",
    "@types/jest": "^29.5.14",
    "angular-eslint": "19.1.0",
    "eslint": "^9.18.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-preset-angular": "^14.5.0",
    "prettier": "^3.4.2",
    "stylelint": "^16.13.2",
    "stylelint-config-clean-order": "^7.0.0",
    "stylelint-config-standard": "^37.0.0",
    "stylelint-no-unsupported-browser-features": "^8.0.2",
    "stylelint-value-no-unknown-custom-properties": "^6.0.1",
    "typescript": "~5.6.3",
    "typescript-eslint": "8.20.0"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupJest.ts"
    ],
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/src/$1"
    },
    "coverageThreshold": {
      "global": {
        "branches": 44,
        "functions": 60,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "browserslist": [
    "last 2 Chrome versions",
    "Firefox ESR",
    "last 2 Edge major versions",
    "last 2 Safari major versions",
    "last 2 iOS major versions",
    "last 2 Android major versions"
  ]
}
